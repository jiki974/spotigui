#:import TopBarWidget spotigui.widgets.topbar.TopBarWidget

<HomeScreen>:
    name: "home"

    MDBoxLayout:
        orientation: "vertical"
        spacing: "5dp"
        padding: "5dp"
        md_bg_color: 1, 1, 1, 1

        TopBarWidget:
            id: top_bar
            back_button_icon: "music-note"

        MDScrollView:
            size_hint: 1, 1

            MDBoxLayout:
                id: playlists_list
                orientation: "vertical"
                spacing: "15dp"
                size_hint_y: None
                padding: "10dp"
                height: self.minimum_height
