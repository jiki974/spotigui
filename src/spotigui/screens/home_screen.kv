#:import TopBarWidget spotigui.widgets.topbar.TopBarWidget

<HomeScreen>:
    name: "home"

    MDBoxLayout:
        orientation: "vertical"
        spacing: 0
        padding: 0
        md_bg_color: 1, 1, 1, 1

        TopBarWidget:
            id: top_bar
            back_button_icon: "music-note"

        MDScrollView:
            do_scroll_x: False

            AnchorLayout:
                anchor_x: "center"
                anchor_y: "top"
                size_hint_y: None
                height: playlists_list.height + dp(20)

                MDGridLayout:
                    id: playlists_list
                    cols: 2
                    spacing: "15dp"
                    size_hint: None, None
                    width: dp(655)
                    padding: 0, dp(10), 0, dp(10)
                    height: self.minimum_height
