<PlaybackControlsSheet>:
    sheet_type: "modal"
    size_hint_y: None
    height: dp(90)

    MDBoxLayout:
        orientation: "vertical"
        padding: "8dp"
        spacing: "8dp"


        # Playback controls content
        MDBoxLayout:
            id: playback_content
            orientation: "horizontal"
            spacing: "16dp"
            size_hint_y: None
            height: dp(64)

            # Volume button (mute/unmute)
            AnchorLayout:
                size_hint_x: 0.25

                MDIconButton:
                    id: volume_btn
                    icon: "volume-mute" if root.is_muted else "volume-high"
                    theme_font_size: "Custom"
                    font_size: sp(32)
                    size: dp(64), dp(64)
                    on_press: root._on_mute_toggle_click(self)

            # Previous button
            AnchorLayout:
                size_hint_x: 0.25

                MDIconButton:
                    id: prev_btn
                    icon: "skip-previous"
                    theme_font_size: "Custom"
                    font_size: sp(32)
                    size: dp(64), dp(64)
                    on_press: root._on_previous(self)

            # Play/Pause button
            AnchorLayout:
                size_hint_x: 0.25

                MDIconButton:
                    id: play_pause_btn
                    icon: "pause" if root.is_playing else "play"
                    theme_font_size: "Custom"
                    font_size: sp(32)
                    size: dp(64), dp(64)
                    on_press: root._on_play_pause(self)

            # Next button
            AnchorLayout:
                size_hint_x: 0.25

                MDIconButton:
                    id: next_btn
                    icon: "skip-next"
                    theme_font_size: "Custom"
                    font_size: sp(32)
                    size: dp(64), dp(64)
                    on_press: root._on_next(self)