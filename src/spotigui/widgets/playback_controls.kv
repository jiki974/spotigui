<PlaybackControlsWidget>:
    orientation: "vertical"
    spacing: "10dp"
    padding: "10dp"
    size_hint_y: None
    height: "100dp"

    MDBoxLayout:
        orientation: "horizontal"
        spacing: "5dp"
        size_hint_y: 1

        # Previous button container
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            size_hint_x: 0.2

            MDIconButton:
                id: prev_btn
                icon: "skip-previous"
                font_size: "48sp"
                size_hint: None, None
                size: "48dp", "48dp"
                on_press: root._on_previous(self)

        # Play/Pause button container
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            size_hint_x: 0.6

            MDIconButton:
                id: play_pause_btn
                icon: "pause" if root.is_playing else "play"
                font_size: "64sp"
                size_hint: None, None
                size: "64dp", "64dp"
                on_press: root._on_play_pause(self)

        # Next button container
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            size_hint_x: 0.2

            MDIconButton:
                id: next_btn
                icon: "skip-next"
                font_size: "48sp"
                size_hint: None, None
                size: "48dp", "48dp"
                on_press: root._on_next(self)
