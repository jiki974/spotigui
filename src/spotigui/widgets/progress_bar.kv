<ProgressBarWidget>:
    orientation: "vertical"
    size_hint_y: None
    height: dp(24)

    MDLinearProgressIndicator:
        id: progress_bar
        value: 0
        max: 100
        size_hint_y: 0.6
        indicator_color: app.theme_cls.errorColor

    MDBoxLayout:
        spacing: "10dp"
        size_hint_y: 0.4

        MDLabel:
            id: current_time_label
            text: "00:00"
            size_hint_x: 0.2
            halign: "left"
            font_size: "10sp"

        MDLabel:
            id: time_remaining_label
            text: root.time_remaining_text
            size_hint_x: 0.8
            halign: "right"
            font_size: "10sp"
