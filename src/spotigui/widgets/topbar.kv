<TopBarWidget>:
    theme_bg_color: "Custom"

    MDTopAppBarLeadingButtonContainer:

        MDActionTopAppBarButton:
            id: back_btn
            icon: root.back_button_icon
            size: dp(64), dp(64)
            theme_icon_color: "Custom"
            icon_color: 1, 1, 1, 1
            on_press: root._on_back(self)


    MDTopAppBarTitle:
        id: track_name_label
        text: "No track playing"
        halign: "center"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        font_style: "Title"
        role: "medium"

    MDTopAppBarTrailingButtonContainer:

        MDActionTopAppBarButton:
            id: device_btn
            icon: "cast"
            size: dp(64), dp(64)
            theme_icon_color: "Custom"
            icon_color: 1, 1, 1, 1
            on_press: root._on_device_button_press(self)
