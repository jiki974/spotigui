<VolumeControlWidget>:
    orientation: "vertical"
    spacing: "20dp"
    padding: "20dp"
    size_hint_y: None
    height: "200dp"

    MDLabel:
        text: "Volume"
        size_hint_y: None
        height: "40dp"
        halign: "center"
        font_size: "20sp"
        bold: True

    MDBoxLayout:
        orientation: "horizontal"
        spacing: "15dp"
        size_hint_y: None
        height: "60dp"

        # Mute button container
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            size_hint_x: None
            width: "60dp"

            MDIconButton:
                id: mute_btn
                icon: "volume-mute" if root.is_muted else "volume-high"
                font_size: "32sp"
                size_hint: None, None
                size: "48dp", "48dp"
                on_press: root._on_mute_toggle(self)

        # Volume slider
        MDSlider:
            id: volume_slider
            min: 0
            max: 100
            value: root.volume_level
            size_hint_x: 1
            on_value: root._on_volume_change(self, args[1])

        # Volume percentage label
        MDLabel:
            id: volume_label
            text: f"{int(root.volume_level)}%"
            size_hint_x: None
            width: "50dp"
            halign: "center"
            font_size: "16sp"
